@model SydneyHotelFinalWebApp.Models.Registration

@{
    ViewBag.Title = "Create";
}

<h2>Register for parties and Events</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Registration form</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="control-label col-md-2">  Event Category*  </div>
        <div class="col-md-10">
            @Html.DropDownList("PartyID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PartyID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">  Organiser Name*  </div>
        <div class="col-md-10">
            @Html.DropDownList("OrganiserID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.OrganiserID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">  Customer Name*  </div>
        <div class="col-md-10">
            @Html.DropDownList("AttendeeID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AttendeeID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">  Event Start Date*  </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.EventStart, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EventStart, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">  Event End Date*  </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.EventEnd, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EventEnd, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">  Member No*  </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NoofMembers, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NoofMembers, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="/Attendees/Create" class="btn btn-secondary"> Back</a>  <input type="submit" value="Confirm Booking" class="btn btn-warning " /> 
            </div>
        </div>
    </div>
}

