        <div class="col-md-offset-2 col-md-10">

            <a href="/Home/Index" class="btn  btn-danger"> Exit</a>
            <a href="Index" class="btn btn-secondary"> Edit</a>  <input type="submit" value="Next" class="btn  btn-warning" />
        </div>
    </div>

</div>
